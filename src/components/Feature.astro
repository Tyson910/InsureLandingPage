---
// Access passed-in component props, like `<X title="Hello, World" />`
const { highlight } = Astro.props;
---

<div class="flex flex-col gap-y-12 lg:gap-y-0 items-center lg:items-start">
  <div class="bg-[hsl(216,30%,68%)] text-white rounded-full w-max p-3 mb-5">
    <div class="w-28 h-28 lg:w-8 lg:h-8 text-white rounded-full">
      <slot name="icon" />
    </div>
  </div>
  <p class="lg:font-semibold font-medium text-7xl lg:text-lg mb-1">
    {highlight}
  </p>
  <div class="text-[hsl(216,30%,30%)] text-5xl lg:text-base">
    <slot name="description" />
  </div>
</div>
